@{
    ViewData["Title"] = "Cadastro Filme";
}

@model Filme


<br />
<h1>CADASTRAR FILME</h1>
<br />

<form asp-action="_CadastroFilme" method="post">

    <div class="input-group mb-2">
        <div class="input-group-text"><label>Filme</label></div>
        <input type="text" class="form-control" placeholder="Nome Filme" asp-for="@Model.NomeDoFilme">
        <span asp-validation-for="@Model.NomeDoFilme"></span>
    </div>
    <br />
    <div class="input-group mb-2">
        <div class="input-group-text"><label>Ator</label></div>
        <input type="text" class="form-control" placeholder="Nome Ator" asp-for="@Model.Ator.NomeDoAtor">
        <span asp-validation-for="@Model.Ator.NomeDoAtor"></span>
    </div>
    <br />
    <div class="input-group mb-2">
        <div class="input-group-text"><label>Diretor</label></div>
        <input type="text" class="form-control" placeholder="Nome Diretor" asp-for="@Model.Diretor.NomeDoDiretor">
        <span asp-validation-for="@Model.Diretor.NomeDoDiretor"></span>
    </div>
    <br />
    <div>
        <label>Classificação Indicativa</label>
        <select class="form-control" asp-for="@Model.ClassificacaoIndicativa">

            <option>Classificação Indicativa do Filme</option>

            @foreach (var item in ViewBag.Classificacao.Items)
            {
                <option value="@item.ClassificacaoDoFilme"> @item.ClassificacaoDoFilme </option>
            }
        </select>
    </div>

    <br />

    <div>
        <label>Genero do Filme</label>
        <select class="form-control" asp-for="@Model.GeneroFilme">
            <option>Selecione o genero do filme</option>

            @foreach (var item in ViewBag.Genero.Items)
            {
                <option value="@item.GeneroDoFilme"> @item.GeneroDoFilme </option>
            }
        </select>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>