@{
    ViewData["Title"] = "Cadastro Série";
}

@model Serie


    <br />

    <form asp-action="_CadastroSerie" method="post">
        <div class="form-group">
            <label>Série</label>
            <input type="text" class="form-control" placeholder="Nome da Série">
        </div>

        <div>
            <div class="form-group">
                <label>Ator</label>
                <input type="text" class="form-control" placeholder="Nome do Ator">
            </div>
        </div>

        <div>
            <div class="form-group">
                <label>Diretor</label>
                <input type="text" class="form-control" placeholder="Nome do Diretor">
            </div>
        </div>

        <div>
            <label>Classificação Indicativa</label>
            <select class="form-control">

                <option>Classificação Indicativa da Série</option>

                @foreach (var item in ViewBag.Classificacao.Items)
                {
                    <option value="@item.Id"> @item.ClassificacaoDoFilme </option>
                }
            </select>
        </div>

        <br />

        <div>
            <label>Genero da Série</label>
            <select class="form-control">
                <option>Selecione o genero da Série</option>

                @foreach (var item in ViewBag.Genero.Items)
                {
                    <option value="@item.Id"> @item.GeneroDoFilme </option>
                }
            </select>
        </div>

        <br />

        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>